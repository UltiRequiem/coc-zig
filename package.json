{
  "name": "coc-zig",
  "version": "0.6.1",
  "description": "Zig language server provider extension using ZLS for coc.nvim",
  "author": "Eliaz Bobadilla <eliaz.bobadilladev@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "keywords": [
    "coc.nvim",
    "ziglang",
    "zls",
    "languageserver",
    "zig"
  ],
  "engines": {
    "coc": "^0.0.80"
  },
  "funding": {
    "type": "patreon",
    "url": "https://www.patreon.com/ultirequiem"
  },
  "repository": "github:ultirequiem/coc-zig",
  "scripts": {
    "lint": "xo src",
    "clean": "rimraf lib",
    "watch": "node esbuild.js --watch",
    "build": "node esbuild.js",
    "prepare": "node esbuild.js"
  },
  "devDependencies": {
    "coc.nvim": "^0.0.80",
    "esbuild": "^0.25.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2",
    "xo": "^0.48.0"
  },
  "activationEvents": [
    "onLanguage:zig",
    "onCommand:go.version"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "coc-zig configuration",
      "properties": {
        "zig.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable coc-zls extension"
        },
        "zig.startUpMessage": {
          "type": "boolean",
          "default": true,
          "description": "Enable Startup message for coc-zig"
        },
        "zig.path": {
          "type": "string",
          "description": "ZSL Path"
        },
        "zig.debugLog": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "commands": [
      {
        "title": "Start the server",
        "category": "Zig",
        "command": "zig.start"
      },
      {
        "title": "Stop the server",
        "category": "Zig",
        "command": "zig.stop"
      },
      {
        "title": "Restart the server",
        "category": "Zig",
        "command": "zig.restart"
      }
    ],
    "snippets": [
      {
        "language": "zig",
        "path": "./src/snippets.json"
      }
    ]
  },
  "xo": {
    "rules": {
      "import/extensions": "off"
    }
  }
}
